@model SoruHazirla.Models.Sinavlar

@{
    ViewBag.Title = "Sinav";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script type="text/javascript">


    function ShowSonuc() {
        // alert($(".group1:checked").val() )
        var c1 = $(".group1:checked").val();
        var c2 = $(".group2:checked").val();
        var c3 = $(".group3:checked").val();
        var c4 = $(".group4:checked").val();
        $.ajax({
            type: "POST",
            url: '/Home/ShowSonuc',
            contentType: "application/json; charset=utf-8",            
            data: "{c1:'" + c1 + "',c2:'" + c2 + "', c3:'" + c3 + "',c4:'" + c4 + "',sId:'"+@Model.SinavId+"'}",
            dataType: "html",
            success: function (result) {
                

                $("#div1").html(result);
            }});

  
}
</script>

<h2>@Model.Title</h2>

<p>@Model.Icerik </p>
   
<br>
