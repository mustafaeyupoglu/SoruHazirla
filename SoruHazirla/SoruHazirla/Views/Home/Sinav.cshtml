            <td>a)<input type="radio" value="a" class="group2" name="group2">@Model.s2a</td>
        </tr>
        <tr>
            <td>b)<input type="radio" value="b" class="group1" name="group1">@Model.s1b</td>
            <td>b)<input type="radio" value="b" class="group2" name="group2">@Model.s2b</td>
        </tr>
        <tr>
            <td>c)<input type="radio" value="c" class="group1" name="group1">@Model.s1c</td>
            <td>c)<input type="radio" value="c" class="group2" name="group2">@Model.s2c</td>
        </tr>
        <tr>
            <td>d)<input type="radio" value="d" class="group1" name="group1">@Model.s1d</td>
            <td>d)<input type="radio" value="d" class="group2" name="group2">@Model.s2d</td>
        </tr>
        <tr>
            <td>3)@Model.s3</td>
